<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="15dp"/>

    <ImageView
        android:id="@+id/photoAccount"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/position"
        android:src="@drawable/brown_rounded" />

    <TextView
        android:id="@+id/tvNameAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name User"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_toRightOf="@id/photoAccount"
        android:textStyle="normal"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tvUserameAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textColor="@color/colorGray"
        android:textSize="18sp"
        android:layout_toRightOf="@id/tvNameAccount"
        android:textStyle="normal"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tvPointAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20122"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:textStyle="normal"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>